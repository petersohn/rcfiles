#!/usr/bin/env bash

media_dir="${HOME}/usr/share"

function notify() {
    name="$1"
    result="$2"

    if [[ $result == 0 ]]; then
        message="Command successful"
        icon=good.svg
        sound=bell.mp3
    else
        message="Command failed"
        icon=bad.svg
        sound=buzz.mp3
    fi

    notify-send \
        --expire-time=10000 \
        --icon="${media_dir}/images/${icon}" \
        "$message" "$name

<i>$PWD</i>"
    ( nohup mplayer -really-quiet "${media_dir}/sounds/${sound}" >/dev/null 2>&1 & )
}

"$@"
result=$?
notify "$*" "$result"
exit "$result"
