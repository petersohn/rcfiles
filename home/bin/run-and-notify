#!/usr/bin/env bash

function notify() {
    name="$1"
    result="$2"

    if [[ $result == 0 ]]; then
        message="Command successful"
        icon=good.svg
    else
        message="Command failed"
        icon=bad.svg
    fi

    notify-send \
        --expire-time=10000 \
        --icon="${HOME}/usr/share/images/${icon}" \
        "$message" "$name

<i>$PWD</i>"
    ( mplayer -really-quiet "${HOME}/usr/share/sounds/bell.mp3" >/dev/null 2>&1 & )
}

"$@"
result=$?
notify "$*" "$result"
exit "$result"
