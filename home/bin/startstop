#!/bin/bash

set -e

script_dir=$(readlink -f "$(dirname "$0")")
venv_path="${script_dir}/startstop.venv" 

if [[ ! -e "$venv_path" ]]; then
    python -m virtualenv "$venv_path"
    source "${venv_path}/bin/activate"
    python -m pip install -r "${script_dir}/startstop.requirements.txt"
else
    source "${venv_path}/bin/activate"
fi

exec python "${script_dir}/startstop.py" "$@"
