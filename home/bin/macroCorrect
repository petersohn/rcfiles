#!/bin/bash

filename="$1"
tmpfile="$filename~"
while [ -e "$output" ]; do
    tmpfile+='~'
done

set -e

mv "$filename" "$tmpfile"

while IFS= read -r line; do
    if [[ $line == *'\' ]]; then
        if [[ $line =~ (.{79})( *)'\' ]]; then
            echo "${BASH_REMATCH[1]}\\"
            continue
        fi

        outputLine="${line:0:$(( ${#line} - 1 ))}"
        length=${#outputLine}
        while [ $length -lt 79 ]; do
            outputLine+=' '
            length=${#outputLine}
        done
        echo "${outputLine}\\"
    else
        echo "$line"
    fi
done <"$tmpfile" >"$filename"

